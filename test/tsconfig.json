{
	"extends": "../tsconfig.options.json",
	"compilerOptions": {
		"tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
		"typeRoots": ["node_modules/@rbxts", "src/types"],
		"baseUrl": "src",
		"rootDir": "src",
		"outDir": "out",
		"declaration": false,
		"declarationMap": false,
		"plugins": [
			{
				"transform": "rbxts-transformer-xstate"
			}
		]
	},
	"exclude": ["out"]
}
